<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    Title="Adicionar Nova Lista"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XF.Facilista.Pages.MyListsAddPage">
    
    <ContentPage.Resources>
        <StyleSheet Source="/Assets/Styles/Main.css"></StyleSheet>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome da Nova Lista:" />
            <Entry Placeholder="Nome da Lista" PlaceholderColor="#ddd"/>
            <Label Text="Descrição:" />
            <Entry Placeholder="Descrição" PlaceholderColor="#ddd"/>
            <Button Text="Adicionar" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>